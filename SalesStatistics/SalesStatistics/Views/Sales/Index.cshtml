<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Sales</h2>
    </div>
    @if (User.IsInRole("admin"))
    {
        <div class="col-3 offset-3">
            <a asp-action="Upsert" asp-controller="Sales" class="btn btn-info form-control text-white">
                Add new Sale
            </a>
        </div>
    }
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Client</th>
                    <th>Cost</th>
                    <th>Date</th>
                    @if (User.IsInRole("admin"))
                    {
                        <th></th>
                    }
                    </tr>
            </thead>
        </table>
    </div>
</div>

@if (User.IsInRole("admin"))
{
    @section Scripts{
        <script src="~/js/SalesList.js"></script>
    }
}
else
{
    @section Scripts{
        <script src="~/js/UserSalesList.js"></script>
    }
}